<div class="clinicianNav">
    
    <script>
        function to_dashboard() {
            window.location.replace(`/clinician/dashboard`)
        }
        function to_registration() {
            window.location.replace(`/clinician/patientRegistration`)
        }
        function to_profile() {
            window.location.replace(`/clinician/profile`)
        }
        function to_resetpassword() {
            window.location.replace(`/clinician/resetPassword`)
        }
    </script>

    <div class="clinicianInfo">
        <li><img src="/images/clinician_icon.png" style: width="100px" height = "100px"></li>
        <li><p>{{clinician_name}}</p></li>
    </div>

    <div class="datetime">
        <div class="date" id="date">
            <span id="dayname">Day</span>
            <li/>
            <span id="month">Month</span>
            /
            <span id="daynum">00</span>
            /
            <span id="year">Year</span>
        </div>
        <div class="time" id="time">
            <span id="hour">00</span>
            :
            <span id="minutes">00</span>
